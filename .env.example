# =============================================================================
# Singl News Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# OpenAI API Key (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (optional, defaults to gpt-4-turbo-preview)
SINGL_MODEL_NAME=gpt-4-turbo-preview

# Update frequency in minutes (optional, default: 30)
SINGL_UPDATE_MINUTES=30

# Number of recent story versions to use for context (optional, default: 10)
SINGL_CONTEXT_STEPS=10

# RSS Feeds - comma-separated list (optional, has defaults)
# SINGL_FEEDS=http://rss.cnn.com/rss/cnn_topstories.rss,http://feeds.bbci.co.uk/news/world/rss.xml

# Logging level (optional, default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR
SINGL_LOG_LEVEL=INFO

# Control Panel Password (REQUIRED for admin access)
SINGL_ADMIN_PASSWORD=your_secure_admin_password_here

# Image Generation Settings
# Enable/disable AI image generation (optional, default: true)
SINGL_IMAGE_GENERATION_ENABLED=true

# Image generation interval in story updates (optional, default: 5)
# Generates an image every N story updates
SINGL_IMAGE_GENERATION_INTERVAL=5

# OpenAI image model (optional, default: dall-e-3)
SINGL_IMAGE_MODEL=dall-e-3

# Image size (optional, default: 1024x1024)
# Options for DALL-E 3: 1024x1024, 1024x1792, 1792x1024
SINGL_IMAGE_SIZE=1024x1024

# Image quality (optional, default: standard)
# Options: standard, hd
SINGL_IMAGE_QUALITY=standard

# Story generation temperature (optional, default: 0.8)
# Range: 0.0 to 2.0, higher = more creative/random
SINGL_TEMPERATURE=0.8

# Max tokens for story generation (optional, default: 4000)
SINGL_MAX_TOKENS=4000
