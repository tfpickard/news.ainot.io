# =============================================================================
# Singl News Production Environment Configuration
# =============================================================================

# Database
POSTGRES_USER=singl
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=singl

# OpenAI (REQUIRED)
OPENAI_API_KEY=sk-your-production-key-here

# Model Configuration
SINGL_MODEL_NAME=gpt-4-turbo-preview
SINGL_UPDATE_MINUTES=30
SINGL_CONTEXT_STEPS=10

# RSS Feeds
SINGL_FEEDS=http://rss.cnn.com/rss/cnn_topstories.rss,http://feeds.bbci.co.uk/news/world/rss.xml,https://www.theguardian.com/world/rss,https://rss.nytimes.com/services/xml/rss/nyt/World.xml,http://feeds.reuters.com/reuters/topNews

# Logging
SINGL_LOG_LEVEL=WARNING

# CORS/WebSocket Origins (comma-separated)
SINGL_WS_ORIGIN=https://singl.news,https://news.ainot.io

# Frontend URLs (should be empty in production to use same-origin)
# Only set these if you need to override the defaults
# VITE_API_URL=
# VITE_WS_URL=
ORIGIN=https://singl.news

# Control Panel Password (REQUIRED)
SINGL_ADMIN_PASSWORD=CHANGE_THIS_SECURE_ADMIN_PASSWORD

# Image Generation
SINGL_IMAGE_GENERATION_ENABLED=true
SINGL_IMAGE_GENERATION_INTERVAL=5
SINGL_IMAGE_MODEL=dall-e-3
SINGL_IMAGE_SIZE=1024x1024
SINGL_IMAGE_QUALITY=standard

# Fine-tuning Controls
SINGL_TEMPERATURE=0.8
SINGL_MAX_TOKENS=4000
