# Database
DATABASE_URL=postgresql+psycopg2://singl:singl@db:5432/singl

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
# Recommended: gpt-5-mini (cost-optimized) or gpt-5.1 (best performance)
SINGL_MODEL_NAME=gpt-5-mini

# Scheduler (in minutes)
SINGL_UPDATE_MINUTES=30

# Story generation (number of recent versions to use for context)
SINGL_CONTEXT_STEPS=10

# RSS Feeds (comma-separated)
SINGL_FEEDS=http://rss.cnn.com/rss/cnn_topstories.rss,http://feeds.bbci.co.uk/news/world/rss.xml,https://www.theguardian.com/world/rss

# Logging
SINGL_LOG_LEVEL=INFO

# WebSocket CORS
SINGL_WS_ORIGIN=*

# Control Panel
SINGL_ADMIN_PASSWORD=your_secure_admin_password_here

# Image Generation
SINGL_IMAGE_GENERATION_ENABLED=true
SINGL_IMAGE_GENERATION_INTERVAL=5
SINGL_IMAGE_MODEL=dall-e-3
SINGL_IMAGE_SIZE=1024x1024
SINGL_IMAGE_QUALITY=standard

# Fine-tuning (for non-GPT-5 models)
SINGL_TEMPERATURE=0.8
SINGL_MAX_TOKENS=4000

# GPT-5 specific parameters (only used when SINGL_MODEL_NAME contains "gpt-5")
# Reasoning effort: none (fastest), low, medium, high (most thorough)
SINGL_REASONING_EFFORT=low
# Text verbosity: low (concise), medium, high (detailed)
SINGL_TEXT_VERBOSITY=medium
